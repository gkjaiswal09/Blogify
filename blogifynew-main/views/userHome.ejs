<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head') %>
    <title>My Blogs - Blogify</title>
  </head>
  <body>
    <%- include('partials/nav') %>
    <main>
      <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2 class="mb-0">My Blogs</h2>
          <div class="d-flex gap-2">
            <button id="bulkTwitterBtn" class="btn btn-outline-info" style="display: none;">üê¶ Share Selected on Twitter</button>
            <a href="/blog/add-new" class="btn btn-primary">Write New Blog</a>
          </div>
        </div>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
          <% if (blogs.length > 0) { %>
            <% blogs.forEach((blog, index) => { %>
              <div class="col fade-in" style="animation-delay: <%= index * 0.1 %>s;">
                <div class="card h-100">
                  <div class="card-header d-flex align-items-center">
                    <div class="form-check">
                      <input class="form-check-input blog-checkbox" type="checkbox" value="<%= blog.slug || blog._id %>" id="blog_<%= index %>">
                      <label class="form-check-label" for="blog_<%= index %>">
                        Select for Twitter
                      </label>
                    </div>
                  </div>
                  <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="<%= blog.title %>" style="height:180px;object-fit:cover;">
                  <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><%= blog.title %></h5>
                    <p class="card-text text-muted">
                      <% if (blog.body.length > 100) { %>
                        <%= blog.body.substring(0, 100) %>...
                      <% } else { %>
                        <%= blog.body %>
                      <% } %>
                    </p>
                    <div class="mt-auto d-flex gap-2">
                      <a href="/blog/<%= blog.slug || blog._id %>" class="btn btn-outline-primary btn-sm">View</a>
                      <a href="/blog/edit/<%= blog.slug || blog._id %>" class="btn btn-outline-secondary btn-sm">Edit</a>
                      <form action="/blog/delete/<%= blog.slug || blog._id %>" method="POST" style="display:inline;">
                        <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Are you sure you want to delete this blog?')">Delete</button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            <% }) %>
          <% } else { %>
            <div class="col-12 text-center py-5">
              <h4 class="text-muted">You haven't written any blogs yet.</h4>
              <a href="/blog/add-new" class="btn btn-primary mt-3">Write Your First Blog</a>
            </div>
          <% } %>
        </div>
      </div>
    </main>
    <%- include('partials/footer') %>
    <%- include('partials/scripts') %>
    
    <script>
      // Handle bulk Twitter posting
      document.addEventListener('DOMContentLoaded', function() {
        const checkboxes = document.querySelectorAll('.blog-checkbox');
        const bulkTwitterBtn = document.getElementById('bulkTwitterBtn');
        
        // Show/hide bulk button based on selections
        function updateBulkButton() {
          const checkedBoxes = document.querySelectorAll('.blog-checkbox:checked');
          bulkTwitterBtn.style.display = checkedBoxes.length > 0 ? 'inline-block' : 'none';
        }
        
        // Add event listeners to checkboxes
        checkboxes.forEach(checkbox => {
          checkbox.addEventListener('change', updateBulkButton);
        });
        
        // Handle bulk Twitter posting
        bulkTwitterBtn.addEventListener('click', async function() {
          const selectedBlogs = Array.from(document.querySelectorAll('.blog-checkbox:checked')).map(cb => cb.value);
          
          if (selectedBlogs.length === 0) {
            alert('Please select at least one blog to share.');
            return;
          }
          
          if (!confirm(`Share ${selectedBlogs.length} selected blog(s) on Twitter?`)) {
            return;
          }
          
          bulkTwitterBtn.disabled = true;
          bulkTwitterBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status"></span> Sharing...';
          
          try {
            const response = await fetch('/twitter/bulk-post', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify({
                blogIds: selectedBlogs
              })
            });
            
            const result = await response.json();
            
            if (result.success) {
              alert(`‚úÖ Successfully shared ${result.postedCount} blog(s) on Twitter!\n\n${result.tweetUrls.join('\n')}`);
              
              // Uncheck all checkboxes
              document.querySelectorAll('.blog-checkbox:checked').forEach(cb => cb.checked = false);
              updateBulkButton();
            } else {
              alert('‚ùå Failed to share on Twitter: ' + result.error);
            }
          } catch (error) {
            console.error('Bulk Twitter share error:', error);
            alert('‚ùå Failed to share on Twitter. Please try again.');
          } finally {
            bulkTwitterBtn.disabled = false;
            bulkTwitterBtn.innerHTML = 'üê¶ Share Selected on Twitter';
          }
        });
      });
    </script>
  </body>
</html> 