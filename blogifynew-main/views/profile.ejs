<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head') %>
    <title>Profile - Blogify</title>
  </head>
  <body>
    <%- include('partials/nav') %>
    
    <div class="container mt-4">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="auth-card">
            <div class="text-center mb-4">
              <img src="<%= user.profileImageURL %>" alt="<%= user.fullName %>" class="author-avatar mb-3" style="width: 100px; height: 100px;">
              <h2 class="auth-title"><%= user.fullName %></h2>
              <p class="text-muted"><%= user.email %></p>
            </div>

            <% if (locals.error) { %>
              <div class="alert alert-danger" role="alert">
                <%= error %>
              </div>
            <% } %>

            <!-- Profile Information Update -->
            <div class="card mb-4">
              <div class="card-header">
                <h5 class="mb-0">Profile Information</h5>
              </div>
              <div class="card-body">
                <form action="/user/profile/update" method="POST">
                  <div class="row">
                    <div class="col-md-6 mb-3">
                      <label for="fullName" class="form-label">Full Name</label>
                      <input
                        type="text"
                        class="form-control"
                        id="fullName"
                        name="fullName"
                        value="<%= user.fullName %>"
                        required
                      />
                    </div>
                    <div class="col-md-6 mb-3">
                      <label for="email" class="form-label">Email Address</label>
                      <input
                        type="email"
                        class="form-control"
                        id="email"
                        name="email"
                        value="<%= user.email %>"
                        required
                      />
                    </div>
                  </div>
                  <button type="submit" class="btn btn-primary">Update Profile</button>
                </form>
              </div>
            </div>

            <!-- Profile Image Update -->
            <div class="card mb-4">
              <div class="card-header">
                <h5 class="mb-0">Profile Image</h5>
              </div>
              <div class="card-body">
                <form action="/user/profile/image" method="POST" enctype="multipart/form-data">
                  <div class="mb-3">
                    <label for="profileImage" class="form-label">Upload New Image</label>
                    <input
                      type="file"
                      class="form-control"
                      id="profileImage"
                      name="profileImage"
                      accept="image/*"
                      required
                    />
                    <div class="form-text">Choose a square image for best results.</div>
                  </div>
                  <button type="submit" class="btn btn-primary">Update Image</button>
                </form>
              </div>
            </div>

            <!-- Password Change -->
            <div class="card mb-4">
              <div class="card-header">
                <h5 class="mb-0">Change Password</h5>
              </div>
              <div class="card-body">
                <form action="/user/profile/password" method="POST">
                  <div class="mb-3">
                    <label for="currentPassword" class="form-label">Current Password</label>
                    <input
                      type="password"
                      class="form-control"
                      id="currentPassword"
                      name="currentPassword"
                      required
                    />
                  </div>
                  <div class="mb-3">
                    <label for="newPassword" class="form-label">New Password</label>
                    <input
                      type="password"
                      class="form-control"
                      id="newPassword"
                      name="newPassword"
                      required
                    />
                    <div class="form-text">Use at least 8 characters with a mix of letters, numbers, and symbols.</div>
                  </div>
                  <button type="submit" class="btn btn-primary">Change Password</button>
                </form>
              </div>
            </div>

            <!-- Twitter Auto-Posting Settings -->
            <div class="card mb-4">
              <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">üê¶ Twitter Auto-Posting</h5>
                <% if (user.twitter && user.twitter.autoTweet) { %>
                  <span class="badge bg-success">‚úÖ Enabled</span>
                <% } else { %>
                  <span class="badge bg-secondary">Disabled</span>
                <% } %>
              </div>
              <div class="card-body">
                <% if (user.twitter && user.twitter.autoTweet) { %>
                  <div class="alert alert-success" role="alert">
                    <strong>Connected!</strong> New posts will auto-tweet as <strong>@<%= user.twitter.screenName %></strong>
                  </div>
                  <div class="d-grid gap-2">
                    <button type="button" class="btn btn-outline-info" id="testTwitterBtn">
                      üß™ Test Connection
                    </button>
                    <form action="/twitter/disable" method="POST" style="display: inline;">
                      <button type="submit" class="btn btn-outline-danger w-100" onclick="return confirm('Are you sure you want to disconnect Twitter?')">
                        üö´ Disconnect Twitter
                      </button>
                    </form>
                  </div>
                <% } else { %>
                  <div class="mb-3">
                    <p class="text-muted mb-2">Connect your Twitter account to automatically share new blog posts.</p>
                    <div class="alert alert-warning small">
                      <strong>Note:</strong> Your Twitter App must have <code>Read and Write</code> permissions, OAuth 2.0 enabled, and include this callback URL in the app settings.
                    </div>
                  </div>
                  <a href="/twitter/connect" class="btn btn-primary w-100">üê¶ Connect Twitter</a>
                <% } %>
              </div>
            </div>

            <!-- Account Actions -->
            <div class="card mb-4">
              <div class="card-header">
                <h5 class="mb-0">Account Actions</h5>
              </div>
              <div class="card-body">
                <div class="d-grid gap-2">
                  <a href="/" class="btn btn-outline-primary">Back to Home</a>
                  <a href="/blog/add-new" class="btn btn-outline-secondary">Write New Story</a>
                  <a href="/calendar" class="btn btn-outline-info">
                    <i class="bi bi-calendar3"></i> Content Calendar
                  </a>
                </div>
              </div>
            </div>
            <!-- Logout Button at the bottom -->
            <div class="d-grid mt-3">
              <a href="/user/logout" class="btn btn-danger btn-lg">Logout</a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('./partials/footer') %>
    <%- include('./partials/scripts') %>
    
    <script>
    document.addEventListener('DOMContentLoaded', function() {
      const twitterStatus = document.getElementById('twitterStatus');
      const testTwitterBtn = document.getElementById('testTwitterBtn');
      
      // Helper function to show status messages
      function showTwitterStatus(message, type = 'info') {
        if (twitterStatus) {
          twitterStatus.innerHTML = `<div class="alert alert-${type} alert-sm py-2 px-3 mb-0">${message}</div>`;
          setTimeout(() => {
            if (type !== 'success') twitterStatus.innerHTML = '';
          }, 5000);
        }
      }
      
      // Removed bearer form submission; now using Connect Twitter redirect flow
      
      // Handle Twitter connection test
      if (testTwitterBtn) {
        testTwitterBtn.addEventListener('click', async function() {
          const originalText = testTwitterBtn.textContent;
          testTwitterBtn.disabled = true;
          testTwitterBtn.innerHTML = '‚è≥ Testing...';
          
          try {
            const response = await fetch('/twitter/test', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              }
            });
            
            const data = await response.json();
            
            if (data.success) {
              alert(`‚úÖ ${data.message}`);
            } else {
              alert(`‚ùå Error: ${data.error}`);
            }
          } catch (error) {
            console.error('Error testing Twitter connection:', error);
            alert('‚ùå Network error. Please try again.');
          } finally {
            testTwitterBtn.disabled = false;
            testTwitterBtn.innerHTML = originalText;
          }
        });
      }
    });
    </script>
  </body>
</html> 